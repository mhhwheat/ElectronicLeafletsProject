<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"  >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/find_item_seller_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/find_item_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/find_item_seller_avatar"
            android:text="又康超市"
            android:textSize="20sp" 
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/find_item_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_item_seller_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/find_item_seller_avatar"
            android:text="5分钟前"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/find_item_leaflet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/find_item_publish_time"
            android:gravity="center_vertical"
            android:text="食品类"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/find_item_leaflet_brief"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/test" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/find_item_comment_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/find_item_comment_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/commentfull" />

            <TextView
                android:id="@+id/find_item_comment_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="123"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/find_item_praise_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/find_item_comment_area"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/find_item_praise_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/praisefull" />

            <TextView
                android:id="@+id/find_item_praise_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>