<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/exit_dialog_bg">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认退出leaflets应用?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
    <org.wheat.leaflets.widget.DashedLine 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button 
            android:id="@+id/dialog_exit_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/selector_exit_dialog_cancel"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"/>
        
        <Button 
            android:id="@+id/dialog_exit_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="确认"
            android:background="@drawable/selector_exit_dialog_confirm"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
